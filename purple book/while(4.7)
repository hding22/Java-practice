package com.company;
import java.util.*;
//add up all number entered
public class App4_7 {
    public static void main(String[]args)
    {
        double sum=0;
        int n=0;
        System.out.println("please enter multiple numbers, press 'enter' or 'tab' or 'space' to confirm:");
        System.out.println("enter a non-number to finish");
        Scanner reader=new Scanner(System.in);
        while(reader.hasNextDouble())
        {
            double x=reader.nextDouble();
            sum=sum+x;
            n++;
        }
            System.out.print("you have enter "+ n +" number, the sum is "+ sum);



    }
    

}
