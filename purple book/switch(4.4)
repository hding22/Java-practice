package com.company;
//determine how many days in a particular month
import java.util.Scanner;

public class App4_4 {
    public static void main(String[] args) {

        int month, days;
        Scanner reader = new Scanner(System.in);
        System.out.print("Please enter the month number(e.g.10)ï¼š");
        month = reader.nextInt();

        switch (month)

        {
            case 2:
                days = 28;
                break;

            case 4:
            case 6:
            case 9:
            case 11:
                days = 30;
                break;

            default:
                days = 31;
        }
        System.out.print("month " + month + " day " + days );
    }

}

